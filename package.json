{
  "name": "motifications",
  "displayName": "Motifications",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [ "onStartupFinished" ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Motifications",
      "properties": {
        "motifications.messages": {
          "title": "Messages",
          "type": "string",
          "editPresentation": "multilineText",
          "default": "Test message 1\nMessage 2\nLast message 3",
          "markdownDescription": "Specify the messages that will be displayed in the notifications"
        },
        "motifications.interval.unit": {
          "type": "string",
          "default": "Minutes",
          "enum": ["Seconds", "Minutes", "Hours", "Days"],
          "enumDescriptions": [
            "Notifications will display every x second(s)",
            "Notifications will display every x minute(s)",
            "Notifications will display every x hour(s)",
            "Notifications will display every x day(s)"
          ]
        },
        "motifications.interval.value": {
          "type": "number",
          "default": 30,
          "markdownDescription": "The interval number for the unit specified"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
